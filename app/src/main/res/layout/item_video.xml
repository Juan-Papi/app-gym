<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/background_rounded_corners"
    android:layout_marginBottom="16dp">

    <!-- Descripci贸n del Video -->
    <TextView
        android:id="@+id/tvNombreVideo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descripci贸n del Video"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- URL del Video -->
    <TextView
        android:id="@+id/tvUrlVideo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="URL del Video"
        app:layout_constraintTop_toBottomOf="@id/tvNombreVideo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Contenedor para los botones -->
    <LinearLayout
        android:id="@+id/llBotones"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvUrlVideo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:weightSum="3">

        <!-- Bot贸n Editar -->
        <Button
            android:id="@+id/btnEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="4dp" />

        <!-- Bot贸n Eliminar -->
        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:padding="4dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
