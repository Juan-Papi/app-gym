<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <EditText
        android:id="@+id/etFechaInicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Fecha de Inicio (YYYY-MM-DD)"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/etFechaVencimiento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Fecha de Vencimiento (YYYY-MM-DD)"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etFechaInicio"/>

    <EditText
        android:id="@+id/etClienteId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="ID del Cliente"
        android:minHeight="48dp"
        android:inputType="number"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etFechaVencimiento"/>

    <Button
        android:id="@+id/btnGuardarMembresia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Guardar Membresía"
        android:contentDescription="Botón para guardar la membresía"
        app:layout_constraintTop_toBottomOf="@id/etClienteId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
