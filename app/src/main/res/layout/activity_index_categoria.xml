<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Título CATEGORÍAS -->
    <TextView
        android:id="@+id/tvTituloCategorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CATEGORÍAS"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Filtros para buscar categorías -->
    <EditText
        android:id="@+id/etFiltroBuscarCategorias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="FILTROS PARA BUSCAR CATEGORÍAS"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloCategorias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Botón NUEVA CATEGORÍA -->
    <Button
        android:id="@+id/btnNuevaCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NUEVA CATEGORÍA"
        app:layout_constraintTop_toBottomOf="@id/etFiltroBuscarCategorias"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Título de la sección de CATEGORÍAS -->
    <TextView
        android:id="@+id/tvCategorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CATEGORÍAS"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnNuevaCategoria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerView para mostrar la lista de categorías -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCategorias"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvCategorias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
