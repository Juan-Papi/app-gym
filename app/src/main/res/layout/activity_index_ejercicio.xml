<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/tvTituloEjercicios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EJERCICIOS"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Filtros para buscar ejercicios -->
    <EditText
        android:id="@+id/etFiltroBuscarEjercicios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="FILTRAR EJERCICIOS"
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloEjercicios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botones para Nuevo Ejercicio y Video -->
    <Button
        android:id="@+id/btnNuevoEjercicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NUEVO EJERCICIO"
        app:layout_constraintTop_toBottomOf="@id/etFiltroBuscarEjercicios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnVideo"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnVideo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="VIDEO"
        app:layout_constraintTop_toBottomOf="@id/etFiltroBuscarEjercicios"
        app:layout_constraintStart_toEndOf="@id/btnNuevoEjercicio"
        app:layout_constraintEnd_toStartOf="@id/btnCategorias"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Botón Categorías -->
    <Button
        android:id="@+id/btnCategorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CATEGORÍAS"
        app:layout_constraintTop_toBottomOf="@id/etFiltroBuscarEjercicios"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Título EJERCICIOS -->
    <TextView
        android:id="@+id/tvEjercicios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EJERCICIOS"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnNuevoEjercicio"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- RecyclerView para mostrar la lista de ejercicios -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerEjercicios"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvEjercicios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Columna de acciones (Ver, Editar, Eliminar) -->
    <TextView
        android:id="@+id/tvAcciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACCIONES"
        app:layout_constraintTop_toBottomOf="@id/btnNuevoEjercicio"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
