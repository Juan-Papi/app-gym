<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Título de la Activity de Video -->
    <TextView
        android:id="@+id/tvTituloVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo Video"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Campo para ingresar la descripción del video -->
    <EditText
        android:id="@+id/etDescripcionVideo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Descripción del Video"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTituloVideo"/>

    <!-- Campo para ingresar la URL del video -->
    <EditText
        android:id="@+id/etUrlVideo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="URL del Video"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etDescripcionVideo"/>

    <!-- Botón para guardar el video -->
    <Button
        android:id="@+id/btnGuardarVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Video"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/etUrlVideo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
