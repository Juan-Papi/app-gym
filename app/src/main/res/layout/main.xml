<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Título de la App -->
    <TextView
        android:id="@+id/tvTituloApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APP GYM"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Filtros para buscar clientes -->
    <EditText
        android:id="@+id/etFiltroBuscarClientes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="FILTRAR CLIENTES"
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloApp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botón NUEVO CLIENTE -->
    <Button
        android:id="@+id/btnNuevoCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NUEVO CLIENTE"
        app:layout_constraintTop_toBottomOf="@id/etFiltroBuscarClientes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnEjercicios"
        android:layout_marginTop="16dp" />

    <!-- Botón EJERCICIOS -->
    <Button
        android:id="@+id/btnEjercicios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="EJERCICIOS"
        app:layout_constraintTop_toBottomOf="@id/etFiltroBuscarClientes"
        app:layout_constraintStart_toEndOf="@id/btnNuevoCliente"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Título CLIENTES -->
    <TextView
        android:id="@+id/tvClientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLIENTES"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnNuevoCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView para mostrar la lista de clientes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerClientes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvClientes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
